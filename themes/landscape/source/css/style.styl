@import 'nib';
@import '_variables';
@import '_util/mixin';
@import '_util/grid';

global-reset();

input, button {
  margin: 0;
  padding: 0;

  &::-moz-focus-inner {
    border: 0;
    padding: 0;
  }
}

@font-face {
  font-family: FontAwesome;
  font-style: normal;
  font-weight: normal;
  src: url(font-icon-path + '.eot?v=#' + font-icon-version);
  src: url(font-icon-path + '.eot?#iefix&v=#' + font-icon-version) format('embedded-opentype'), url(font-icon-path + '.woff?v=#' + font-icon-version) format('woff'), url(font-icon-path + '.ttf?v=#' + font-icon-version) format('truetype'), url(font-icon-path + '.svg#fontawesomeregular?v=#' + font-icon-version) format('svg');
}

html, body, #container {
  width: 980px;
  margin: 0 auto;
  height: 100%;
}

body {
  background: color-background;
  font: font-size font-sans;
  -webkit-text-size-adjust: 100%;
}

.outer {
  clearfix();
  // max-width: (column-width + gutter-width) * columns + gutter-width;
  margin: 0 auto;
  // padding: 0 gutter-width;
}

.main-margin {
  margin: 50px 0;
}

.inner {
  column(columns);
}

.left, .alignleft {
  float: left;
}

.right, .alignright {
  float: right;
}

.clear {
  clear: both;
}

#container {
  position: relative;
}

.mobile-nav-on {
  overflow: hidden;
}

a {
  text-decoration: none;
}

#wrap {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: 0.2s ease-out;
  z-index: 1;
  background: color-background;

  .mobile-nav-on & {
    left: mobile-nav-width;
  }
}

.normal-btn {
  line-height: 54px;
  color: #41403e;
  font-size: 0.8rem;
  padding: 0.5rem 0.8rem;
  margin: 0 0.4rem;
  font-weight: 550;
  text-align: center;
  transition: all 0.2s;
  border: dashed 2px #41403e;
  border-top-left-radius: 255px 80px;
  border-top-right-radius: 150px 225px;
  border-bottom-right-radius: 225px 122px;
  border-bottom-left-radius: 100px 255px;
  box-shadow: 2px 8px 4px -6px rgba(0, 0, 0, 0.3);
}

.normal-btn:hover {
  color: #fff;
  background-color: #41403e;
  box-shadow: 20px 38px 34px -26px rgba(0, 0, 0, 0.2);
}

// 更多按钮样式
.more-btn, .prev, .next, .page-number {
  color: #fff;
  font-size: 1rem;
  font-weight: 550;
  text-align: center;
  transition: all 0.2s linear;
  border: dashed 2px #41403e;
  border-top-left-radius: 255px 80px;
  border-top-right-radius: 150px 225px;
  border-bottom-right-radius: 225px 122px;
  border-bottom-left-radius: 100px 255px;
  box-shadow: 2px 8px 4px -6px rgba(0, 0, 0, 0.3);
  background-color: #41403e;
}

.more-btn:hover, .prev:hover, .next:hover, .page-number:hover {
  color: #383020;
  background-color: #fff;
  box-shadow: 20px 38px 34px -26px rgba(0, 0, 0, 0.2);
}

.animation-img {
  width: 100%;
  margin: 5px 0;
  cursor: pointer;
  display: inline-block;
  border-radius: 5px;
  transition: transform 0.3s;
  object-fit: cover; /* 图片固定大小，不变形 */
  background: linear-gradient(55deg, #b3d8c7, #8fafc1);
  -webkit-filter: grayscale(0%);
  filter: grayscale(0%);
}

.animation-img:hover {
  transition: all 0.7s;
  transform: scale(1.01);
  -webkit-filter: grayscale(90%) blur(1px);
  filter: grayscale(90%) blur(1px);
}

// 顶部加载条
.pace .pace-progress {
  background: #1E92FB; /* 进度条颜色 */
  height: 3px;
}

.pace .pace-progress-inner {
  box-shadow: 0 0 10px #1E92FB, 0 0 5px #1E92FB; /* 阴影颜色 */
}

.pace .pace-activity {
  border-top-color: #1E92FB; /* 上边框颜色 */
  border-left-color: #1E92FB; /* 左边框颜色 */
}

